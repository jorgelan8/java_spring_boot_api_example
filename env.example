# Configuración de la aplicación
APP_ENV=development
PORT=8080
HOST=localhost

# Configuración de Base de Datos (agnostic to specific DB)
DB_TYPE=mysql
DB_HOST=localhost
DB_PORT=3306
DB_NAME=api_example
DB_USERNAME=api_user
DB_PASSWORD=api_password
DB_ROOT_PASSWORD=root_password

# Configuración de Repositorio
APP_REPOSITORY_TYPE=mock
TEST_REPOSITORY_TYPE=mock

# Configuración de Email
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=your-email@gmail.com
TO_EMAILS=admin@spring_boot_api_example.com,notifications@spring_boot_api_example.com

# Configuración de Reportes
REPORT_CHANNELS=email,log
REPORT_SUBJECT=Migration Report - API Example (Java)
